<div class="page-header">
  <h1>My Profile</h1>
</div>

<div class="table-responsive">
  <div class="well">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Height in inches</th>
        <th>Weight in lbs</th>
        <th>Wellness goals</th>
      </tr>
      </thead>

      <tbody>
      <%= content_tag_for(:tr, @profiles) do |profile| %>
        <td><%= profile.name %></td>
        <td><%= profile.age %></td>
        <td><%= profile.height_in_inches %></td>
        <td><%= profile.weight_in_lbs %></td>
        <td><%= profile.wellness_goals %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <!--<td><%= link_to 'Destroy', profile, method: :delete, data: {confirm: 'Are you sure?'} %></td>-->
      <% end %>
      </tbody>
    </table>
  </div>
</div>
