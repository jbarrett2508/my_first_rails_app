<div class="well">
  <h2>Login</h2>
  <br>

  <div>
    <%= image_tag('facebook_logo2.png') %>
    <%= link_to button_tag('Sign in via Facebook'), '/auth/facebook' %>
    <p>
    </p>
  </div>
  <%= form_tag login_path do %>
    <p>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag 'Login' %>
  <% end %>
</div>
