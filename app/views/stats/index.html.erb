<h1>My Stats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Height (in inches)</th>
      <th>Integer</th>
      <th>Weight</th>
      <th>Wellness Goals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.name %></td>
        <td><%= stat.age %></td>
        <td><%= stat.height_in_inches %></td>
        <td><%= stat.integer %></td>
        <td><%= stat.weight %></td>
        <td><%= stat.wellness_goals %></td>
        <td><%= link_to 'Show', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Update My Stats', new_stat_path(@stat) %>
