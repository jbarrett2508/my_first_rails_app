<h1>My Stats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Height (in inches)</th>
      <th>Integer</th>
      <th>Weight</th>
      <th>Wellness Goals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.name %></td>
        <td><%= stat.age %></td>
        <td><%= stat.height_in_inches %></td>
        <td><%= stat.integer %></td>
        <td><%= stat.weight %></td>
        <td><%= stat.wellness_goals %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to 'Update My Stats', 'stats/edit' %></h2>
