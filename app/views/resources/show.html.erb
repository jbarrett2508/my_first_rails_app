<div class="page-header">
  <%= link_to resources_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_resource_path(@resource), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show resource</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @resource.title %></dd>

  <dt>Medium:</dt>
  <dd><%= @resource.medium %></dd>

  <dt>Year:</dt>
  <dd><%= @resource.year %></dd>

  <dt>Keywords:</dt>
  <dd><%= @resource.keywords %></dd>

</dl>
