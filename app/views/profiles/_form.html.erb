<%= form_for(@profile, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @profile.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :age, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :height_in_inches, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :height_in_inches, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight_in_lbs, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :weight_in_lbs, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :wellness_goals, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :wellness_goals, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
