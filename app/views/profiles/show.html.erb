<div class="page-header">
  <%= link_to profiles_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_profile_path(@profile), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show profile</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @profile.name %></dd>

  <dt>Age:</dt>
  <dd><%= @profile.age %></dd>

  <dt>Height in inches:</dt>
  <dd><%= @profile.height_in_inches %></dd>

  <dt>Weight in lbs:</dt>
  <dd><%= @profile.weight_in_lbs %></dd>

  <dt>Wellness goals:</dt>
  <dd><%= @profile.wellness_goals %></dd>

</dl>
