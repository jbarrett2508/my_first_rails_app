<% if current_user %>
  <%= link_to profile_user_path(current_user), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Edit My Profile
  <% end %>
  <h4>Signed in as <%= current_user.username %> | <%= link_to 'Logout', logout_path, method: :delete %></h4>
<% else %>
  <h4><%= link_to 'Login', login_path %> | <%= link_to 'Sign Up', new_user_path %></h4>
<% end %>

